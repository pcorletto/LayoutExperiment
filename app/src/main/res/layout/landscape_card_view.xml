<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/card1_height"
    android:id="@+id/cwMorning"
    android:layout_gravity="center_horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="165dp"
            android:id="@+id/imgPicture"
            android:scaleType="centerCrop"
            android:src="@drawable/landscape"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical|right">

            <!-- TextView with the name of the CardView here -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvLandscapeName"
                android:text="@string/morning_title"
                android:gravity="center_vertical"
                android:textSize="18dp"
                android:layout_marginRight="30dp"/>

            <!-- Buttons here> -->
            <ImageButton
                android:layout_width="38dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_like"
                android:id="@+id/likeImageButton"
                android:layout_marginRight="7dp"/>

            <ImageButton
                android:layout_width="38dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_menu"
                android:id="@+id/menuImageButton"/>


        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>