<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/WindowBackground"
            tools:context=".MainActivity">

<LinearLayout android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

   <include
        android:id="@+id/tool_bar"
        layout="@layout/tool_bar">
    </include>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/frame_layout_margin"
        android:background="#D3CDBF">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/card1_height"
            android:id="@+id/cwMorning"
            android:layout_gravity="center_horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="165dp"
                android:scaleType="centerCrop"
                android:src="@drawable/landscape"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical|right">

                    <!-- TextView with the name of the CardView here -->

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tvLandscapeName"
                        android:text="@string/morning_title"
                        android:gravity="center_vertical"
                        android:textSize="18dp"
                        android:layout_marginRight="30dp"/>

                    <!-- Buttons here> -->
                    <ImageButton
                        android:layout_width="38dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_like"
                        android:id="@+id/likeImageButton"
                        android:layout_marginRight="7dp"/>

                    <ImageButton
                        android:layout_width="38dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_menu"
                        android:id="@+id/menuImageButton"/>


                    </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_width="140dp"
            android:layout_height="@dimen/card1_height"
            android:id="@+id/cwAfternoon"
            android:layout_gravity="center_horizontal"
            android:layout_below="@id/cwMorning"
            android:layout_alignParentLeft="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="140dp"
                    android:layout_height="165dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/afternoon"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical|right">

                    <!-- Buttons here> -->
                    <ImageButton
                        android:layout_width="38dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_like"
                        android:id="@+id/likeImageButton3"
                        android:layout_marginRight="7dp"/>

                    <ImageButton
                        android:layout_width="38dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_menu"
                        android:id="@+id/menuImageButton3"/>

                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_width="140dp"
            android:layout_height="@dimen/card1_height"
            android:id="@+id/cwNight"
            android:layout_gravity="center_horizontal"
            android:layout_below="@id/cwMorning"
            android:layout_alignParentRight="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="140dp"
                    android:layout_height="165dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/night"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical|right">

                    <!-- Buttons here> -->
                    <ImageButton
                        android:layout_width="38dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_like"
                        android:id="@+id/likeImageButton2"
                        android:layout_marginRight="7dp"/>

                    <ImageButton
                        android:layout_width="38dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_menu"
                        android:id="@+id/menuImageButton2"/>

                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </RelativeLayout>

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/myFAB"
        android:layout_marginEnd="@dimen/button_margin"
        android:layout_marginBottom="@dimen/button_margin"
        android:src="@drawable/ic_search"
        android:background="@drawable/oval_shape"
        app:elevation="@dimen/elevation_button"
        app:fabSize="normal"
        app:borderWidth="0dp"
        android:stateListAnimator="@anim/button_elevation"
        android:layout_gravity="right"/>

</LinearLayout>

</ScrollView>